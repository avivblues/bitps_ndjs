		block style
	body
		section#container
			//
				**********************************************************************************************************************************************************
				TOP BAR CONTENT & NOTIFICATIONS
				***********************************************************************************************************************************************************
			// header start
			header.header.black-bg
				.sidebar-toggle-box
					.fa.fa-bars.tooltips(data-placement='right', data-original-title='Toggle Navigation')
				// logo start
				a.logo(href='/')
					b BITPOS Software
				// logo end
				#top_menu.nav.notify-row
					// notification start
					ul.nav.top-menu
						// settings start
						li.dropdown
							a.dropdown-toggle(data-toggle='dropdown', href='#')
								i.fa.fa-tasks
								span.badge.bg-theme 4
							ul.dropdown-menu.extended.tasks-bar
								.notify-arrow.notify-arrow-green
								li
									p.green You have 4 pending tasks
								li
									a(href='#')
										.task-info
											.desc DashGum Admin Panel
											.percent 40%
										.progress.progress-striped
											.progress-bar.progress-bar-success(role='progressbar', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100', style='width: 40%')
												span.sr-only 40% Complete (success)
								li
									a(href='#')
										.task-info
											.desc Database Update
											.percent 60%
										.progress.progress-striped
											.progress-bar.progress-bar-warning(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%')
												span.sr-only 60% Complete (warning)
								li
									a(href='#')
										.task-info
											.desc Product Development
											.percent 80%
										.progress.progress-striped
											.progress-bar.progress-bar-info(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100', style='width: 80%')
												span.sr-only 80% Complete
								li
									a(href='#')
										.task-info
											.desc Payments Sent
											.percent 70%
										.progress.progress-striped
											.progress-bar.progress-bar-danger(role='progressbar', aria-valuenow='70', aria-valuemin='0', aria-valuemax='100', style='width: 70%')
												span.sr-only 70% Complete (Important)
								li.external
									a(href='#') See All Tasks
						// settings end
						// inbox dropdown start
						li#header_inbox_bar.dropdown
							a.dropdown-toggle(data-toggle='dropdown', href='#')
								i.fa.fa-envelope-o
								span.badge.bg-theme 5
							ul.dropdown-menu.extended.inbox
								.notify-arrow.notify-arrow-green
								li
									p.green You have 5 new messages
								li
									a(href='#')
										span.photo
											img(alt='avatar', src='public/img/ui-zac.jpg')
										span.subject
											span.from Zac Snider
											span.time Just now
										span.message
											| Hi mate, how is everything?
								li
									a(href='#')
										span.photo
											img(alt='avatar', src='public/img/ui-divya.jpg')
										span.subject
											span.from Divya Manian
											span.time 40 mins.
										span.message
											| Hi, I need your help with this.
								li
									a(href='#')
										span.photo
											img(alt='avatar', src='public/img/ui-danro.jpg')
										span.subject
											span.from Dan Rogers
											span.time 2 hrs.
										span.message
											| Love your new Dashboard.
								li
									a(href='#')
										span.photo
											img(alt='avatar', src='public/img/ui-sherman.jpg')
										span.subject
											span.from Dj Sherman
											span.time 4 hrs.
										span.message
											| Please, answer asap.
								li
									a(href='#') See all messages
						// inbox dropdown end
					// notification end
				.top-menu
					ul.nav.pull-right.top-menu
						li
							a.logout(href='login.php') Logout
			// header end
			//
				**********************************************************************************************************************************************************
				MAIN SIDEBAR MENU
				***********************************************************************************************************************************************************
			// sidebar start
			aside
				#sidebar.nav-collapse
					// sidebar menu start
					ul#nav-accordion.sidebar-menu
						p.centered
							a(href='/')
								img.img-circle(src='public/img/ui-sam.jpg', width='60')
						h5.centered Marcel Newman
						li.mt
							if menu == "dashboard"
								a.active(href='/')
									i.fa.fa-dashboard
									span Dashboard
							else
								a(href='/')
									i.fa.fa-dashboard
									span Dashboard
						li.sub-menu
							if menu == "Setup"
								a.active(href='javascript:;')
									i.fa.fa-cogs
									span Setup
							else
								a(href='javascript:;')
									i.fa.fa-cogs
									span Setup
							ul.sub
								li
									a(href='#') Setup user
								li
									a(href='#') Setup Harga
								li
									a(href='/mstrneraca') Setup Neraca
						li.sub-menu
							if menu == "Trans"
								a.active(href='javascript:;')
									i.fa.fa-tasks
									span Transactions
							else
								a(href='javascript:;')
									i.fa.fa-tasks
									span Transactions
							ul.sub
								li
									a(href='') Sales
								li
									a(href='') Sales Retur
								li
									a(href='') Purchase Order
						li.sub-menu
							if menu == "Master"
								a.active(href='javascript:;')
									i.fa.fa-th
									span Data Tables
							else
								a(href='javascript:;')
									i.fa.fa-th
									span Data Tables
							ul.sub
								li
									a(href='/mstritem') Master Item
								li
									a(href='/mstritem') Master Customers
								li
									a(href='/mstraccount') Master Account
								li
									a(href='/mstrprodcat') Master Product Category
								li
									a(href='/mstrprodum') Master Product UM
						li.sub-menu
							if menu == "Report"
								a.active(href='javascript:;')
									i.fa.fa-print
									span Report
							else
								a(href='javascript:;')
									i.fa.fa-print
									span Report
							ul.sub
								li
									a(href='/') Stock
								li
									a(href='/') Sales
								li
									a(href='/') Purchase Order
								li
									a(href='/') Balance Sheet
								li
									a(href='/') General Ledger
					// sidebar menu end
			// sidebar end
			//
				**********************************************************************************************************************************************************
				MAIN CONTENT
				***********************************************************************************************************************************************************
			// main content start
			section#main-content
				section.wrapper
					block halaman
			// main content end
			// footer start
			footer.site-footer
				.text-center
					| 2016 - M. Aviv S. #{title}
